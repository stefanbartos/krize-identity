---
interface Props {
  items: Array<{ name: string; web: string; oblast?: string }>;
  showOblast?: boolean;
}

const { items, showOblast = true } = Astro.props;
---

<table class="table table-striped">
  <thead>
    <tr>
      {showOblast && <th scope="col">Oblast</th>}
      <th scope="col">Web</th>
    </tr>
  </thead>
  <tbody>
    {
      items.map(({ oblast, name, web }, i) => (
        <tr>
          {showOblast && <td>{oblast ?? ""}</td>}
          <td>
            <a
              href={web}
              target="_blank"
              style="text-decoration: underline !important; color: #0056b3 !important"
            >
              {name}
            </a>
          </td>
        </tr>
      ))
    }
  </tbody>
</table>
